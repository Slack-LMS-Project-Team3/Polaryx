FROM node:20-alpine

ARG NEXT_PUBLIC_BASE
ARG NEXT_PUBLIC_WS
ARG NEXT_PUBLIC_VAPID_PUBLIC_KEY
ENV NEXT_PUBLIC_BASE=$NEXT_PUBLIC_BASE 
ENV NEXT_PUBLIC_WS=$NEXT_PUBLIC_WS 
ENV NEXT_PUBLIC_VAPID_PUBLIC_KEY=$NEXT_PUBLIC_VAPID_PUBLIC_KEY
 

WORKDIR /app

COPY ./package*.json .
RUN npm install

COPY . .
RUN npm run build

# RUN npm run build 
CMD ["npm", "run", "start"]