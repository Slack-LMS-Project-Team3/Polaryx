FROM python:3.12-slim

ARG GOOGLE_CLIENT_SECRET
ARG GOOGLE_CLIENT_ID

ENV GOOGLE_CLIENT_SECRET=$GOOGLE_CLIENT_SECRET 
ENV GOOGLE_CLIENT_ID=$GOOGLE_CLIENT_ID

ENV ENVIRONMENT=PROD
ENV SECRET_KEY=$JWT_SECRET_KEY
ENV DB_USER=root
ENV DB_PASSWORD=$DB_PASSWORD
ENV DB_NAME=jungle_slam
ENV RDB_HOST=localhost
ENV RDB_PORT=3306
ENV NOSQL_HOST=localhost
ENV NOSQL_PORT=27017
ENV NOSQL_URL=mongodb://NOSQL_HOST:PASSWORD/DB_USER?authSource=DB_NAME --username DB_USER
ENV CONNECTION_TIMEOUT=60

WORKDIR /app

COPY ./requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY . .

CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000"]